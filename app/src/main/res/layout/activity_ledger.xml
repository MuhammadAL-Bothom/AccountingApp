<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/windowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/ledgerLayout"
    tools:context=".LedgerActivity">

    <!-- 🔍 شريط الفلترة -->
    <LinearLayout
        android:id="@+id/filterBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 🧾 اسم الحساب -->
        <EditText
            android:id="@+id/etFilterAccount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="🔎 الحساب"
            android:padding="8dp"
            android:backgroundTint="@color/purple_200" />

        <!-- 📅 التاريخ -->
        <EditText
            android:id="@+id/etFilterDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="📅 التاريخ"
            android:padding="8dp"
            android:focusable="false"
            android:inputType="none"
            android:backgroundTint="@color/purple_200"
            android:layout_marginStart="8dp" />

        <!-- زر الفلترة -->
        <Button
            android:id="@+id/btnFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔍"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 📄 قائمة القيود -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        android:background="#FAFAFA"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/filterBar"
        app:layout_constraintBottom_toTopOf="@id/totalTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 💵 الإجمالي -->
    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🔄 المدين: 0 | الدائن: 0"
        android:gravity="center"
        android:padding="16dp"
        android:background="#E0E0E0"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
