<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AccountingApp" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- ActionBar style -->
        <item name="actionBarStyle">@style/WhiteActionBar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="Theme.AccountingApp" parent="Base.Theme.AccountingApp" />

    <!-- 🤍 Dark theme: ActionBar white, text black -->
    <style name="WhiteActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@android:color/white</item>
        <item name="titleTextStyle">@style/BlackActionBarText</item>
    </style>

    <style name="BlackActionBarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
