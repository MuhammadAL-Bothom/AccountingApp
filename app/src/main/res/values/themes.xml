<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AccountingApp" parent="Theme.Material3.DayNight">
        <!-- الألوان العامة -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- ✅ تخصيص شريط العنوان فقط -->
        <item name="actionBarStyle">@style/BlackActionBar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

    <style name="Theme.AccountingApp" parent="Base.Theme.AccountingApp" />

    <!-- ✅ تخصيص شريط العنوان نفسه -->
    <style name="BlackActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@android:color/black</item>
        <item name="titleTextStyle">@style/WhiteActionBarText</item>
    </style>

    <!-- ✅ نص أبيض داخل الـ ActionBar -->
    <style name="WhiteActionBarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
